{
  "name": "standard-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.16",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "antd": "^4.9.4",
    "axios": "^0.21.1",
    "craco-less": "^1.17.1",
    "env-cmd": "^10.1.0",
    "history": "^5.0.0",
    "lodash": "^4.17.20",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "redux": "^4.0.5",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.3.0",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "echo '#NODE_ENV='${NODE_ENV:=development}'' && env-cmd -f ./environments/${NODE_ENV}/.env.${NODE_ENV}.local craco start",
    "build": "echo '#NODE_ENV='${NODE_ENV:=production}'' && env-cmd -f ./environments/${NODE_ENV}/.env.${NODE_ENV} craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss,css,json}'",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x} --color",
    "generate": "./node_modules/.bin/plop --plopfile src/plop/generators/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,html,ts,tsx,scss,css,json}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.166",
    "@types/react-redux": "^7.1.14",
    "@types/react-router": "^5.1.9",
    "@types/react-router-dom": "^5.1.7",
    "@types/redux-promise": "^0.5.29",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "install-peerdeps": "^2.0.3",
    "lint-staged": "^10.5.3",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4"
  },
  "homepage": "https://shanehowl.github.io/standard-react-app/"
}
